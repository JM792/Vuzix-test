<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleListActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/coral"
        >

        <RelativeLayout
            android:id="@+id/relativeParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/collapsedRel"
                >

                <TextView
                    android:id="@+id/txtListName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="List Name:"
                    android:fontFamily="@font/mistery"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/listName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_toRightOf="@+id/txtListName"
                    android:fontFamily="@font/mistery"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txtItemNum"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Containing items:"
                    android:layout_below ="@+id/txtListName"
                    android:fontFamily="@font/mistery"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/itemNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# Items"
                    android:layout_below="@+id/listName"
                    android:layout_toRightOf="@+id/txtItemNum"
                    android:fontFamily="@font/mistery"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/txtListComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed:"
                    android:layout_below="@+id/txtItemNum"
                    android:fontFamily="@font/mistery"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtListComplete"
                    android:layout_below="@+id/itemNum"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    app:trackThickness="5dp"
                    android:textColor="@color/white"/>




            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collapsedRel"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/expandedRel"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/txtDesc"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:fontFamily="@font/mistery"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtDesc"
                    android:text="content"
                    android:fontFamily="@font/mistery"
                    android:textColor="@color/white"/>






            </RelativeLayout>

        </RelativeLayout>






    </androidx.cardview.widget.CardView>


</RelativeLayout>